<% content_for :gradient_class, "bg-gradient" %>
<div class="container sign-up-form">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <a href="/" title="Simple Token">
          <img src="//d3attjoi5jlede.cloudfront.net/simpletoken/logo/logo-with-tagline-mobile.png" width="211"/>
        </a>
      </div>
      <div class="simple-token-form">
        <h1 class="text-center form-header">Login to Simple Token</h1>
        <form class="user-form" method="" action="" id="">
          <div class="form-group">
            <label for="email">email address</label>
            <input type="text" name="email" id="email" value="" class="form-control" autofocus tabindex="1">
            <span id="err_email" class="error"></span>
          </div>
          <div class="form-group">
            <label for="password">password</label>
            <div class="input-group">
              <input type="password" name="password" id="password" value="" class="form-control" tabindex="2" />
              <span class="input-group-addon glyphicon glyphicon-eye-open"></span>
            </div>
            <a href="" title="Forgot password?" class="forgot-password" tabindex="3">Forgot password?</a>
            <span id="err_password" class="error"></span>
          </div>
          <div class="form-group user-form-footer">
            <button type="submit" class="btn st-btn" id="" title="LOGIN" tabindex="4">login</button>
            <a href="" title="Create Your Account" class="create-account" tabindex="5">Create Your Account</a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>