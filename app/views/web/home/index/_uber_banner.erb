<%
   if @presenter_obj.present?
     text1 = ''
     text2 = ''
     text3 = ''

     case true
       when @presenter_obj.has_sale_ended?
         text1 = 'The token sale has ended.'
         text3 = 'Learn more on '
       when @presenter_obj.has_sale_paused?
         text1 = 'The token sale has been temporarily paused.'
         text3 = 'Learn more on '
       when @presenter_obj.has_general_access_sale_started?
         text1 = 'The token sale is Live -'
         text3 = 'Connect with the team on '

         case true
           when @presenter_obj.power_milestone_achieved?
             text2 = '30% Power bonus'
             text3 = ' activated! ' + text3
           when @presenter_obj.kicker_milestone_achieved?
             text2 = '25% Kicker bonus!'
             text3 = ' activated! ' + text3
           when @presenter_obj.target_milestone_achieved?
             text2 = '20% Target bonus!'
             text3 = ' activated! ' + text3
           else
             text2 = '20% bonus'
             text3 = '  when Target is hit! ' + text3
         end

       when @presenter_obj.has_early_access_sale_started?
         text1 = 'The Early Access token sale is Live! '
         text3 = 'Connect with the team on '

         case true
           when @presenter_obj.power_milestone_achieved?
             text2 = '30% Power bonus'
             text3 = ' activated! ' + text3
           when @presenter_obj.kicker_milestone_achieved?
             text2 = '25% Kicker bonus'
             text3 = ' activated! ' + text3
           when @presenter_obj.target_milestone_achieved?
             text2 = '20% Target bonus'
             text3 = ' activated! ' + text3
           else
             text2 = '20% bonus'
             text3 = '  for all when Target is hit. ' + text3
         end
       when @presenter_obj.has_early_access_register_ended?
         text1 = 'Early Access token sale begins 14 Nov. 20% bonus for all when Target is hit.'
         text2 = ''
         text3 = 'Connect with the team on '

       else
         text1 = 'Token sale starts 14 November, 2017. Get Early Access and 10% Bonus.'
         text2 = ''
         text3 = 'Connect with the team on '
     end
   else

     if Time.now >= GlobalConstant::StTokenSale.general_access_sale_start_date
       text1 = 'The token sale is Live - 20% bonus when Target is hit. '
       text2 = ''
       text3 = 'Connect with the team on '
     elsif Time.now >= GlobalConstant::StTokenSale.early_access_sale_start_date
       text1 = 'The Early Access token sale is Live!  20% bonus for all when Target is hit. '
       text2 = ''
       text3 = 'Connect with the team on '
     else
       text1 = 'Early Access token sale begins 14 Nov. 20% bonus for all when Target is hit. '
       text2 = ''
       text3 = 'Connect with the team on '
     end

   end

%>

<div class="text-center uber-banner hidden-xs">
  <span class="uber-banner-icon"></span>&nbsp;&nbsp;<%= text1 %>
  <% if text2.present? %>
      <a href="#sale-progress-container" class="smooth-scroll"><%= text2 %></a>
  <% end %>
  <%= text3 %><a href="https://www.t.me/simpletoken" target="_blank" title="Join our Telegram channel">Telegram</a>
</div>

<div class="container-fluid hidden-sm hidden-md hidden-lg hidden-xl">
  <div class="row uber-banner">
    <div class="col-xs-1">
      <div class="row">
        <span class="uber-banner-icon"></span>
      </div>
    </div>
    &nbsp;&nbsp;
    <div class="col-xs-11">
      <div class="row">
        <%= text1 %>
        <% if text2.present? %>
            <a href="#sale-progress-container" class="smooth-scroll"><%= text2 %></a>
        <% end %>
        <%= text3 %>
        <a href="https://www.t.me/simpletoken" target="_blank" title="Join our Telegram channel">Telegram</a>
      </div>
    </div>
  </div>
</div>
