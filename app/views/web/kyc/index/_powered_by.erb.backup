<%
   tick_image = "<img src='//d36lai1ppm9dxu.cloudfront.net/assets/image/ost-kyc/ost-kyc-green-check-mark.svg' width='20'/>";
   powered_by = [
     {
      col1: "User Registrations",
      col2: "400 user registrations ",
      col3: "5,000 user registrations Included",
      bg_color: 'active'
     },
     {
      col1: "Secure storage",
      col2: "3 months secure storage",
      col3: "3 months secure storage",
      bg_color: 'transparent'
     },
     {
      col1: "Encryption",
      col2: "256-bit AES and SSL/TLS encryption",
      col3: "256-bit AES and SSL/TLS encryption",
      bg_color: 'active'
     },
     {
      col1: "Support",
      col2: "Email Support",
      col3: "Priority Support",
      bg_color: 'transparent'
     },
     {
      col1: "ETH Whitelisting",
      col2: "Available",
      col3: "Available as an Add on ( +1$)",
      bg_color: 'active'
     },
     {
      col1: "User Interface ",
      col2: "User Interface Development",
      col3: "Customisable User Interface",
      bg_color: 'transparent'
     },
     {
       col1: "Pricing",
       col2: "Flat rate <br/> <span class='price-text'>$2,500</span> <br/> Payments accepted in OST",
       col3: "Starts at <br/> <span class='price-text'>$2<small>Per User Submission</small></span> <br/> Payments accepted in OST",
       bg_color: 'active'
     }
   ]
%>
<section id="pricing" class="container-powered">
  <div class="container-fluid">
    <div class="row powered-desc">
      <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3">
        <h2>
          <span style="vertical-align: bottom">Powered by</span>
          <img src="//d36lai1ppm9dxu.cloudfront.net/assets/image/ost-kyc/ost-logo-white.svg" height="48" />
        </h2>
        <p>OST KYC offers flexible features to run your ICO and charges in OST.</p>
      </div><!-- original code starts here one div closing tag in between two tables-->

    </div>
    <div class="row">
      <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
        <div class="row">
          <div class="col-4">

              <div>
                <div class="table-head"></div>
              </div>
              <% powered_by.each_with_index do|data, index| %>
                <div class="<%= data[:bg_color] %> ">
                  <div><%= data[:col1] %></div>

                </div>
              <% end %>


          </div>
          <div class="col-4 ">

              <div>
                <div class="align-top text-left  table-head-presale">
                  <span class="title">Presale Plan</span>
                </div>
              </div>
              <% powered_by.each_with_index do|data, index| %>
                <div class="<%= data[:bg_color] %> table-row">
                  <div><%= raw data[:col2] %></div>

                </div>
              <% end %>


          </div>
          <div class="col-4 ">

              <div>
                <div class="text-left table-head-public">
                  <span class="title">Public Sale Plan</span></br>
                  <!--small class="font-weight-light">12 Months Secure Storage and Priority Support included with any Add On</small-->
                </div>
              </div>
              <% powered_by.each_with_index do|data, index| %>
                <div class="<%= data[:bg_color] %>">
                  <div><%= raw data[:col3] %></div>

                </div>
              <% end %>


          </div>

        </div>

      </div>
    </div>

    <div class="text-center">
      <a href="#contactus" class="btn btn-primary smooth-scroll mt-4" title="Get Started">Get Started</a>
    </div>
  </div>
</section>


