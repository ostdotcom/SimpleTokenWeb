<%
   img_root = "//d36lai1ppm9dxu.cloudfront.net/assets/image/ost-kyc/";
   more_benefits = [
   {
     title: "Review Process",
     description: "200 free sandbox API calls for testing.",
     image:{
       src: img_root + "ost-kyc-more-benefits-review-process.svg",
       height: "75",
       alt: "Review process"
     }
   },
   {
     title: "Encryption",
     description: "256-bit AES and SSL/TLS encryption.",
     image:{
       src: img_root + "ost-kyc-more-benefits-encryption.svg",
       height: "75",
       alt: "Encryption"
     }
   },
   {
     title: "Admin and 2FA",
     description: "Unlimited Admin Logins with two-factor authentication.",
     image:{
       src: img_root + "ost-kyc-more-benefits-admin-2fa.svg",
       height: "75",
       alt: "Admin and 2FA"
     }
   },
   {
     title: "Transactional Emails",
     description: "A dedicated Pepo Campaigns account to manage your ICO Transactionals and Email Communications",
     image:{
       src: img_root + "ost-kyc-more-benefits-transactional-emails.svg",
       height: "75",
       alt: "Transactional Emails"
     }
   },
   {
     title: "Smart Filters",
     description: "Quickly sort by KYC status, risk status and ID status.",
     image:{
       src: img_root + "ost-kyc-more-benefits-smart-filters.svg",
       height: "75",
       alt: "Smart Filters"
     }
   },
   {
     title: "Support",
     description: "Documentation and Integration Technical Support",
     image:{
       src: img_root + "ost-kyc-more-benefits-support.svg",
       height: "75",
       alt: "Support"
     }
   },
   ]
%>

<section class="container-more-benefits">
  <div class="container">
    <div class="row">
      <div class="col-xs-12">
        <h2 class="text-center">More Benefits</h2>
        <% more_benefits.each_with_index do|member, index| %>
          <% if (index % 3) == 0 %><div class="row"><% end %>
          <div class="col-xs-12 col-sm-4 col-sm-offset-0" itemprop="member" itemscope itemtype="http://schema.org/Person">
            <img itemprop="photo" src="<%=member[:image][:src] %>" alt="<%=member[:image][:alt] %>" height="<%=member[:image][:height] %>">
            <h3><%= raw member[:title] %></h3>
            <p class="companies-desc"><%= raw member[:description] %></p>
          </div>
          <% if ((index % 3) == 2) || ((index + 1) == more_benefits.length) %></div><% end %>
        <% end %>
      </div>
    </div>
    <div class="text-center">
      <a href="#contactus" class="btn btn-square-gold btn-gold smooth-scroll" title="Contact Us">Contact Us</a>
    </div>
  </div>
</section>


