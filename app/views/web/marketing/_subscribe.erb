<form class="user-form" id="subscribe-form">
  <div class="form-group">
    <input type="email" class="form-control" id="subscribe-form-email" name="email" placeholder="email@example.com">
  </div>
  <div>
    <button type="submit" class="btn btn-square-gold send-updates" id="subscribe-form-submit" data-jsonp="<%= GlobalConstant::PepoCampaign.subscribe_url %>">send me updates</button>
  </div>
  <div class="error"></div>
</form>
<div id="subscribe-success" style="display: none">
  <span class="small-title">Almost finished</span>
  <span class="small-desc">To confirm your email address, please click the link in the email we just sent you.</span>
</div>