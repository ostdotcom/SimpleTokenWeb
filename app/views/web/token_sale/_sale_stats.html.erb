<div class="item-parent">
  <div class="item">
    <span class="progress-total-sold-icon"></span>
    <div class="item-stats">
      <% if @presenter_obj.has_sale_ended? %>
        <div class="total-header">st purchased</div>
      <% else %>
        <div class="total-header">st towards <%= @presenter_obj.next_milestone_to_achieve %></div>
      <% end %>
      <div class="total-value"><%=  @presenter_obj.formatted_total_st_token_sold %> ST</div>
    </div>
  </div>
</div>
<div class="item-parent">
  <div class="item">
    <span class="progress-total-eth-icon"></span>
    <div class="item-stats">
      <div class="total-header">total eth raised</div>
      <div class="total-value"><%=  @presenter_obj.formatted_total_eth_raised %> ETH</div>
    </div>
  </div>
</div>
<div class="item-parent">
  <div class="item">
    <span class="progress-total-purchasers-icon"></span>
    <div class="item-stats">
      <div class="total-header">total purchasers</div>
      <div class="total-value"><%=  @presenter_obj.formatted_total_unique_purchasers %></div>
    </div>
  </div>
</div>