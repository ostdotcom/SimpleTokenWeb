<div class="container-fluid container-progress">

  <div class="content">
    <h2 class="header">Community Crowd Sale Bonuses</h2>

    <div class="container-timeline">
      <div class="progress">
        <div class="progress-bar pb-1" role="progressbar" style="width: 20%">
            <div class="pb-inner complete" style=""></div>
        </div>
        <div class="progress-bar pb-2" role="progressbar" style="width: 17.17%">
            <div class="pb-inner complete" style=""></div>
        </div>
        <div class="progress-bar pb-3" role="progressbar" style="width: 12%">
            <div class="pb-inner complete" style=""></div>
        </div>
        <div class="progress-bar pb-4" role="progressbar" style="width: 25%">
            <div class="pb-inner in-progress" style="width: 60%"></div>
        </div>
        <div class="progress-bar pb-5" role="progressbar" style="">
            <div class="pb-inner" style=""></div>
        </div>
      </div>
      <div class="milestones">
        <div class="milestone ms-1 complete" style="left:calc(20.83% - 50px)">
          <div class="st"><strong>50M</strong> ST</div>
          <div class="line"></div>
          <div class="point">
            <div class="point-inner"></div>
          </div>
          <div class="check">&#10004;</div>
          <div class="desc">
            <div class="title">Soft Cap</div>
            <div class="sub">Sale Activated</div>
          </div>
        </div>
        <div class="milestone ms-2 complete" style="left:calc(38% - 50px)">
          <div class="st"><strong>100M</strong> ST</div>
          <div class="line"></div>
          <div class="point">
            <div class="point-inner"></div>
          </div>
          <div class="check">&#10004;</div>
          <div class="desc">
            <div class="title">Target</div>
            <div class="sub">Everyone gets</div>
            <div class="bonus">20% bonus</div>
          </div>
        </div>
        <div class="milestone ms-3 in-progress" style="left:calc(50% - 50px)">
          <div class="st"><strong>120M</strong> ST</div>
          <div class="line"></div>
          <div class="point">
            <div class="point-inner"></div>
          </div>
          <div class="check">&#10004;</div>
          <div class="desc">
            <div class="title">Kicker</div>
            <div class="sub">Everyone gets</div>
            <div class="bonus">25% bonus</div>
          </div>
        </div>
        <div class="milestone ms-4" style="left:calc(75% - 50px)">
          <div class="st"><strong>180M</strong> ST</div>
          <div class="line"></div>
          <div class="point">
            <div class="point-inner"></div>
          </div>
          <div class="check">&#10004;</div>
          <div class="desc">
            <div class="title">Power</div>
            <div class="sub">Everyone gets</div>
            <div class="bonus">30% bonus</div>
          </div>
        </div>
        <div class="milestone ms-5" style="left:calc(100% - 50px)">
          <div class="st"><strong>240M</strong> ST</div>
          <div class="line"></div>
          <div class="point">
            <div class="point-inner"></div>
          </div>
          <div class="check">&#10004;</div>
        </div>
      </div>
    </div>

    <div class="container-timeline-vertical">
      <div class="progress">
        <div class="progress-bar progress-bar-completed" role="progressbar" style="height: <%= @presenter_obj.progress_bar_percent %>%"></div>
      </div>
      <div class="milestone" style="top:calc(0% - 15px)">
        <div class="point" <%= raw 'style="border-color: #597a84"' if @presenter_obj.has_early_access_register_started? %> ></div>
        <div class="st"><%= "#{GlobalConstant::StTokenSale.early_access_register_start_date.day} #{GlobalConstant::StTokenSale.early_access_register_start_date.strftime('%b')}" %></div>
        <div class="title">Pre-registration Starts</div>
      </div>
      <div class="milestone" style="top:calc(33.33% - 15px)">
        <div class="point" <%= raw 'style="border-color: #597a84"' if @presenter_obj.has_early_access_register_ended? %> ></div>
        <div class="st"><%= "#{GlobalConstant::StTokenSale.early_access_register_end_date.day} #{GlobalConstant::StTokenSale.early_access_register_end_date.strftime('%b')}" %></div>
        <div class="title">Pre-Registered Sale Ends</div>
      </div>
      <div class="milestone" style="top:calc(66.66% - 15px)">
        <div class="point" <%= raw 'style="border-color: #597a84"' if @presenter_obj.has_general_access_sale_started? %> ></div>
        <div class="st"><%= "#{GlobalConstant::StTokenSale.general_access_sale_start_date.day} #{GlobalConstant::StTokenSale.general_access_sale_start_date.strftime('%b')}" %></div>
        <div class="title">Public Sale Starts</div>
      </div>
      <div class="milestone" style="top:calc(100% - 15px)">
        <div class="point" <%= raw 'style="border-color: #597a84"' if @presenter_obj.has_sale_ended? %> ></div>
        <div class="st"><%= "#{GlobalConstant::StTokenSale.general_access_sale_end_date.day} #{GlobalConstant::StTokenSale.general_access_sale_end_date.strftime('%b')}" %></div>
        <div class="title">Pubic Sale Ends</div>
      </div>
    </div>

  </div>

  <img src="https://d36lai1ppm9dxu.cloudfront.net/assets/image/join-team-divider-3x.png" width="124"/>

</div>