<div class="container-fluid dashboard-page margin35auto">
  <div class="row">

    <div class="col-12">

      <% if @presenter_obj.show_unable_for_early_purchase_text? %>
        <div class="text-center early-access-purchase">Only users that have preregistered are able to purchase during
          the Early Access sale.
        </div>
      <% end %>

      <% if !@presenter_obj.has_sale_ended? %>
        <div class="card mb-3  kyc-panel <%= @presenter_obj.kyc_verification_class %>">
          <div class="card-body">
            <table>
              <tr>
                <td>
                  <span class="kyc-status-icon-<%= @presenter_obj.kyc_verification_icon_class %> ver-middle"></span>
                  <span class="ver-middle"><%= @presenter_obj.kyc_verification_text %></span>
                </td>

                <td>
                  <% if @presenter_obj.is_kyc_pending? %>
                    <a href="javascript:void(0)" <%= raw 'class="openModal"' if @presenter_obj.show_kyc_update_modal? %> id="kycUpdate">update
                      kyc</a>
                  <% end %>
                </td>

              </tr>
            </table>
          </div>
        </div>

        <% if @presenter_obj.show_ethereum_address_whitelist_status_box? %>
          <div class="card mb-3 kyc-panel approved">
            <div class="card-body">
              <table>
                <tr>
                  <td>
                    <span class="kyc-status-icon-<%= @presenter_obj.ethereum_address_whitelist_icon_class %> ver-middle"></span>
                    <span class="ver-middle"><%= @presenter_obj.ethereum_address_whitelist_done? ? 'Ethereum Address Whitelisted' : 'Ethereum Address Whitelisting in Progress' %></span>
                  </td>
                  <td>
                  </td>
                </tr>
              </table>
            </div>
          </div>
        <% end %>
      <% end %>

      <% if @presenter_obj.is_st_token_sale_client? %>

        <% if !@presenter_obj.is_kyc_denied? %>
          <div class="card mb-3 kyc-panel approved">
            <div class="card-body">
              <table>
                <tr>
                  <td>
                    <span class="kyc-status-icon-<%= @presenter_obj.token_name_icon_class %> ver-middle"></span>
                    <span class="ver-middle"><%= @presenter_obj.token_name_pending? ? 'BT reservation (Optional)' : 'Token Name Reserved' %></span>
                  </td>
                  <td>
                    <a href="/update-token"><%= @presenter_obj.token_name_pending? ? 'learn more' : 'change name' %></a>
                  </td>
                </tr>
              </table>
            </div>
          </div>

          <% if @presenter_obj.show_bonus_box? %>
            <div class="card mb-3 kyc-panel approved">
              <div class="card-body">
                <div style="overflow: hidden">
                  <span class="pull-left">
                  <span class="kyc-status-icon-<%= @presenter_obj.bonus_icon_class %> ver-middle"></span>
                    <span class="ver-middle"><%= @presenter_obj.bonus_text %></span>
                </span>
                  <% if !@presenter_obj.is_bonus_confirmed? || @presenter_obj.multple_bonus_confirmed? %>
                    <a href="javascript:void(0)" id="prove-support-link" class="collapsed pull-right" data-toggle="collapse" data-target="#prove-support-content"><%= @presenter_obj.multple_bonus_confirmed? ? 'DETAILS' : 'LEARN MORE' %></a>
                  <% end %>
                </div>

                <% if !@presenter_obj.is_bonus_confirmed? %>
                  <div id="prove-support-content" class="panel-collapse collapse">
                    <div class="prove-support-content">
                      <h5 class="header">Earn Your 10% Early Access Bonus</h5>
                      <div class="desc">Join our Telegram Channel and send us a Proof of Support at
                        community@simpletoken.org
                        to get 10% Bonus on your Early Access purchase.
                      </div>
                      <div class="text-center">
                        <a href="https://docs.google.com/document/d/1mOQBspEmW3hDLSfu8eG4bmWML79d5yIKIE1yZjsyDRc/edit" target="_blank" title="Learn More">LEARN
                          MORE</a>
                      </div>
                    </div>
                    <div class="prove-support-content drop-bonus">
                      <h5 class="header">Get 10% Altcoin Drop Bonus</h5>
                      <div class="desc">Earn a 10% Bonus in Altcoin of your choice by purchasing a minimum of 1 ETH
                        in the ST Early Access token sale.
                      </div>
                      <div class="text-center">
                        <a href="https://docs.google.com/forms/d/1I2mGKs91_HZxIZUNNeO4nqCYDaWmIqE1weazwC7hnvI/viewform?edit_requested=true" target="_blank" title="Learn More">LEARN
                          MORE</a>
                      </div>
                      <div class="text-center" style="font-size: 11px;margin: 15px 0 0;">*Only one of the bonus
                        offers can apply during the Early Access token sale
                      </div>
                    </div>
                  </div>
                <% elsif @presenter_obj.multple_bonus_confirmed? %>

                  <div id="prove-support-content" class="panel-collapse collapse">
                    <div class="prove-support-content">
                      <h5 class="header">10% Early Access Bonus</h5>
                      <div class="desc">The #altdrop bonus and the Simple Token Proof of Support bonus cannot be
                        combined.
                        As you qualify for both #altdrop and ST Proof of Support, you can choose which bonus you
                        prefer. We will contact you after the ST token sale ends to clarify your preference.
                      </div>
                    </div>
                  </div>
                <% end %>

              </div>
            </div>

          <% end %>


          <% if @presenter_obj.show_community_bonus_box? %>
            <div class="card mb-3 kyc-panel approved">
              <div class="card-body">
                <div style="overflow: hidden">
                    <span class="pull-left">
                    <span class="kyc-status-icon-approved ver-middle"></span>
                        <span class="ver-middle"><%= @presenter_obj.community_bonus %>% Community Bonus </span>
                    </span>
                  <a href="javascript:void(0)" id="community-bonus-link" class="collapsed pull-right" data-toggle="collapse" data-target="#community-bonus-content">LEARN
                    MORE</a>
                </div>


                <div id="community-bonus-content" class="panel-collapse collapse">
                  <div class="prove-support-content">
                    <h5 class="header"></h5>
                    <div class="desc">When a total of 100M ST have been sold, all purchasers will receive a 20% ST
                      Target Bonus. The ST Target bonus is on top of all other bonuses that participants have earned.
                    </div>
                    <div class="desc" style="padding-top: 20px">When a total of 120M ST have been sold, all purchasers
                      will receive a 25% Kicker Bonus. The ST Kicker bonus replaces the Target bonus.
                    </div>
                    <div class="desc" style="padding-top: 20px">When a total of 180M ST have been sold, all purchasers
                      will receive a 30% Power Bonus on their purchases. The ST Power bonus replaces the Kicker bonus.
                    </div>
                    <div class="text-center">
                      <a href="https://medium.com/ostdotcom/simple-token-st-sale-details-important-updates-new-developments-9-november-2017-6fe4aab74831" target="_blank" title="Learn More">LEARN
                        MORE</a>
                    </div>
                  </div>
                </div>

              </div>
            </div>

            <!--community bonus end-->
          <% end %>

          <div class="card mb-3 kyc-panel approved">
            <div class="card-body">
              <div style="overflow: hidden">
                    <span class="pull-left">
                    <span class="kyc-status-icon-approved ver-middle"></span>
                        <span class="ver-middle">15% ETH Price Bonus</span>
                    </span>
                <a href="https://medium.com/ostdotcom/important-update-price-adjustments-based-on-eth-during-st-token-sale-893fa99531cd" target="_blank" class="pull-right">LEARN
                  MORE</a>
              </div>
            </div>
          </div>

          <% if @presenter_obj.no_of_bonus > 1 %>
            <div style="border-top: solid 1px #6c9ba9;margin-bottom: 15px;"></div>
            <div class="card mb-3 kyc-panel approved">
              <div class="card-body text-center">
                <div style="font-weight: 500;padding-bottom: 10px">TOTAL BONUSES</div>
                <div>You will
                  <span style="font-weight: 500">receive <%= @presenter_obj.total_bonus %>% ST bonus</span>
                  on each of your purchases. Bonuses will be distributed on 15 January.
                  <%= !@presenter_obj.is_alternate_token_bonus_confirmed? ? '' : (@presenter_obj.multple_bonus_confirmed? ? 'At end of sale, you may choose to receive 10% of your bonus as altdrop instead of ST.' : 'You will also receive 10% bonus in your altdrop of choice.') %>
                </div>
              </div>
            </div>
          <% else %>
            <div class="text-center" style="color: #597a84;font-weight: 500;">Bonuses will be distributed within 45
              days of the sale end.
            </div>
          <% end %>

          <!--kyc denied condition end-->
        <% end %>
      <% end %>

    </div>

  </div>
</div>
<% if @presenter_obj.show_kyc_update_modal? %>
  <%= render :partial => "/shared/web/modals/kyc_update_warning_modal" %>
<% end %>