<%

   case true
     when @presenter_obj.power_milestone_achieved?
       tweet_text = "🔝45% bonus activated! @theSimpleToken — cryptocurrencies for communities. #ICO."
       tweet_element = "45% ST <u>Power Bonus</u> Activated"
     when @presenter_obj.kicker_milestone_achieved?
       tweet_text = "🚀Join in @theSimpleToken #ICO — #cryptocurrencies for communities. 40% bonus activated!"
       tweet_element = "40% ST <u>Kicker Bonus</u> Activated"
     when @presenter_obj.target_milestone_achieved?
       tweet_text = "💥I’m in @theSimpleToken #ICO — #cryptocurrencies for communities. 20% bonus for all activated!"
       tweet_element = "20% ST <u>Target Bonus</u> Activated"
     else
       tweet_text = "🔛 Got it! @theSimpleToken #ICO - #cryptocurrency for communities. The more buyers, more bonus for all."
       tweet_element = "#{@presenter_obj.target_percent_achieved}% of ST <u>Target Achieved</u>"
   end
%>

<div class="container-ribbon hidden-xs">
  <div class="ribbon">
    <div class="text display-4 p-2"><a href="#sale-progress-container"><%= raw tweet_element %></a></div>
  </div>
  <div class="ribbon-fold"></div>
  <div class="tweet">
    <a class="twitter-share-button"
       href="https://twitter.com/share"
       data-text="<%= tweet_text %>"
       data-url="https://sale.simpletoken.org">
      Tweet
    </a>
  </div>
</div>

<% content_for :end_js do %>
    <script>window.twttr = (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0],
                t = window.twttr || {};
        if (d.getElementById(id)) return t;
        js = d.createElement(s);
        js.id = id;
        js.src = "https://platform.twitter.com/widgets.js";
        fjs.parentNode.insertBefore(js, fjs);

        t._e = [];
        t.ready = function (f) {
            t._e.push(f);
        };

        return t;
    }(document, "script", "twitter-wjs"));</script>
<% end %>