<div id="sale-progress-container" class="container-fluid container-progress <%= !@presenter_obj.has_sale_ended? && !@presenter_obj.has_sale_paused? && !@presenter_obj.can_purchase? ? 'gradient' : '' %> ">
  <div class="content">
    <% if !@presenter_obj.has_sale_ended? && !@presenter_obj.has_sale_paused? %>
        <h2 class="header">Token Sale Community Bonus</h2>
        <p class="lead">When Target is hit, everyone gets 20% ST bonus!</p>
    <% end %>
    <%= render :partial => "/shared/web/common/progress" %>
  </div>
</div>

<div class="token-sale-progress text-center dashboard">
  <%= render :partial => "/web/token_sale/sale_stats" %>
</div>