<div class="container-fluid dashboard-page">
  <div class="registration-timer">
    <%= render :partial => "/shared/web/common/token_sale_progress" %>
    <div class="progress-stats">Raised: 1216 ETH ($4,535,680)</div>
    <% unless @presenter_obj.has_sale_ended? %>
        <div class="progress-stats">Avialable: 200 ETH ($332,998)</div>
        <div class="progress-stats">Ratio: 1 Simple Token = 0.01 ETH</div>
    <% end %>

    <% if @presenter_obj.is_sale_ongoing? %>
        <h2><%= @presenter_obj.is_pre_sale_mode_on? ? 'PUBLIC SALE OPENS IN' : 'PUBLIC SALE CLOSES IN' %> </h2>
        <table class="countdown" data-countdown="<%= (@presenter_obj.is_pre_sale_mode_on? ? GlobalConstant::StTokenSale.public_sale_start_date.to_i : GlobalConstant::StTokenSale.public_sale_end_date.to_i) * 1000 %>">
          <tr class="time">
            <td class="days">00</td>
            <td>:</td>
            <td class="hours">00</td>
            <td>:</td>
            <td class="minutes">00</td>
            <td>:</td>
            <td class="seconds">00</td>
          </tr>
          <tr class="labels">
            <td>Days</td>
            <td></td>
            <td>Hours</td>
            <td></td>
            <td>Mins</td>
            <td></td>
            <td>Secs</td>
          </tr>
        </table>
    <% end %>
  </div>
</div>