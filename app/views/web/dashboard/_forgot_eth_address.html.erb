<% if !@presenter_obj.is_kyc_denied? %>
  <div class="container-fluid forgot-eth margin35auto" id="eth-address">
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center" id="user-eth-address">
          <div class="header">Check your ETH address registration status and ST balance</div>

          <div id="user-eth-address-input-wrap" class="dashboard-page" style="margin: 0 auto">
            <fieldset id="user-eth-address-fieldset" class="user-eth-address">
              <input type="text" name="user_etherenum_address" id="user-eth-address-input" class="user-eth-address-input" placeholder="Enter the ETH Address you registered with" value="" />
              <input type="button" id="user-eth-address-validate-btn" class="btn-gold user-eth-address-validate-btn" value="CHECK">
            </fieldset>
            <div class="errors-wrap">
              <div class="error" data-for="user_etherenum_address"></div>
              <div class="error" data-for="general_error"></div>
            </div>
          </div>

          <div id="user-eth-address-success" class="dashboard-page" style="margin: 20px auto;display: none;">
            <div class="panel panel-default kyc-panel approved">
              <div class="panel-body">
                <div class="header" style="border-bottom: solid 1px #597a84;padding-bottom: 10px"><span class="kyc-status-icon-approved" style="vertical-align: middle"></span>&nbsp;The ethereum address you entered is registered</div>
                <input type="button" id="user-eth-address-success-done-btn" class="done-btn btn user-eth-address-validate-btn" value="DONE">
              </div>
            </div>
          </div>

          <div id="user-eth-address-purchase-details" class="dashboard-page" style="margin: 20px auto;display: none;">
            <div class="panel panel-default kyc-panel approved">
              <div class="panel-body">
                <div class="header" style="border-bottom: solid 1px #597a84;padding-bottom: 10px">Your Token Purchase Details</div>
                <div class="progress-stats">
                  <span>Total ETH Sent:</span>
                  <span id="user-eth-address-purchase-sent"></span>
                </div>
                <div class="progress-stats">
                  <span>Simple Tokens Alloted:</span> 
                  <span id="user-eth-address-purchase-alloted"></span>
                </div>
                <div class="progress-stats" style="margin-bottom: 20px">
                  <span>Ratio:</span>
                  <span id="user-eth-address-purchase-ratio"></span>
                </div>
                <input type="button" id="user-eth-address-purchase-details-done-btn" class="done-btn btn user-eth-address-validate-btn" value="DONE">
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
<% end %>