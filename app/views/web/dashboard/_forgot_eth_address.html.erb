<% if !@presenter_obj.is_kyc_denied? %>
  <div class="container-fluid forgot-eth margin35auto">
    <div class="row">
      <div class="col-xs-12">
        <div class="text-center" id="user-eth-address">
          <div class="header">Forgot which ETH address you registered for the sale?</div>

          <div id="user-eth-address-input-wrap">
            <fieldset id="user-eth-address-fieldset" class="user-eth-address">
              <input type="text" name="user_etherenum_address" id="user-eth-address-input" class="user-eth-address-input" placeholder="Registered Ethereum Address" value="" />
              <input type="button" id="user-eth-address-validate-btn" class="btn-gold user-eth-address-validate-btn" value="CHECK">
            </fieldset>
            <div class="error" data-for="user_etherenum_address"></div>
            <div class="error" data-for="general_error"></div>
          </div>

          <div id="user-eth-address-success" style="display:none;">
            <div class="header">The ethereum address you entered is registered</div>
            <input type="button" id="user-eth-address-success-done-btn" class="btn-gold user-eth-address-validate-btn" value="DONE">
          </div>

          <div id="user-eth-address-purchase-details" style="display:none;">
            <div class="header">Your Token Purchase Details</div>
            <div><span>Total ETH Sent:</span> <span id="user-eth-address-purchase-sent"></span></div>
            <div><span>Simple Tokens Alloted:</span> <span id="user-eth-address-purchase-alloted"></span></div>
            <div><span>Ratio:</span><span id="user-eth-address-purchase-ratio"></span></div>
            <input type="button" id="user-eth-address-purchase-details-done-btn" class="btn-gold user-eth-address-validate-btn" value="DONE">
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>