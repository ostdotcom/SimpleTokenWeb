<div class="container-fluid container-press token-sale-press" style="background: transparent;">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">

      <div class="video-carousel with-placeholder">
        <% for i in 1..3 do %>
          <div class="carousel-item">
            <div class="thumbnail">
              <div class="video-container">
                <img class="thumb-img" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAJCAYAAAFMLZykAAAABGdBTUEAALGPC/xhBQAAABFJREFUKBVjYBgFoyFA1RAAAAJTAAEABdnJAAAAAElFTkSuQmCC" />
              </div>
              <div class="caption">
                <h4></h4>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="modal fade youtube-modal" id="youtube-video-modal" tabindex="-1" role="dialog">
  <button type="button" class="close" data-dismiss="modal" style="opacity: 1;font-size: 18px;position: absolute;right: 12px;top: 15px;z-index: 1">
    <span aria-hidden="true" class="modal-close-icon" title="close"></span>
  </button>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content" style="background: transparent; box-shadow: none; -webkit-box-shadow:none; border:none">
      <div class="modal-body" style="padding: 0px;">
        <iframe src="" frameborder="0" allowfullscreen id="frameVideo" style="width:100%"></iframe>
      </div>
    </div>
  </div>
</div>

<%
  #IMPORTANT: THE PLACE HOLDER IS MADE BASED ON BELOW TEMPLATE.
  #If you are changing this, please make sure to change placeholder above.
  # the base64 image is a 16/9 transparent image.
%>
<script type="custom" id="carousel-item">
    <div class="carousel-item" data-toggle="modal" data-target="#youtube-video-modal" data-src="__video_embed__">
      <div class="thumbnail">
        <div class="video-container">
          <div class="play">
            <svg class="svg">
              <switch>
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#icon-play"></use>
              </switch>
            </svg>
          </div>
          <img class="thumb-img" data-thumb-src="__image__" src="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAJCAYAAAFMLZykAAAABGdBTUEAALGPC/xhBQAAABFJREFUKBVjYBgFoyFA1RAAAAJTAAEABdnJAAAAAElFTkSuQmCC" />
        </div>
        <div class="caption">
          <h4>__title__</h4>
        </div>
      </div>
    </div>
</script>