<section class="container container-token-key-dates paddingTop57" id="keydates">
  <div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-10 col-lg-offset-1">
      <h2 class="header text-center">Roadmap</h2>
      <h2 class="header text-center">2017</h2>
      <!-- THE CODE | THE CODE | THE CODE | THE CODE | THE CODE -->
      <div id="timeline_2017">
        <div class="demo-card-wrapper road-map-2017">

          <% key_dates_data_2017.each_with_index do | data, indx | %>
            <div class="demo-card demo-card--step<%= indx + 1%>">
              <div class="head">
                <div class="number-box"><%= data[:display_date] %></div>
                <h3><%= data[:heading] %></h3>
              </div>
              <div class="body">
                <p><%= data[:description] %></p>
                <% if data[:img].present? %>
                  <img src="<%= data[:img][:src] %>" style="width:<%= data[:img][:width] %>px;" />
                <% end %>
              </div>
            </div>            
          <% end %>
        </div>

