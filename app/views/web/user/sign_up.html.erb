<% content_for :gradient_class, "bg-gradient poRel height100vh" %>
<div class="container sign-up-form">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <img src="//d3attjoi5jlede.cloudfront.net/simpletoken/logo/logo-with-tagline-mobile.png" width="211"/>
      </div>

      <div class="stepwizard">
        <div class="stepwizard-row setup-panel">
          <div class="stepwizard-step">
            <a href="#step-1" type="button" class="btn btn-circle selected">1</a>
          </div>
          <div class="stepwizard-step">
            <a href="#step-2" type="button" class="btn btn-default btn-circle" disabled="disabled">2</a>
          </div>
          <div class="stepwizard-step">
            <a href="#step-3" type="button" class="btn btn-default btn-circle" disabled="disabled">3</a>
          </div>
        </div>
      </div>

      <div class="simple-token-form">
        <h1 class="text-center form-header">Register for Token Public Sale</h1>
        <form class="user-form" method="POST" action="/api/user/sign-up" id="userSignUpForm">
          <div class="form-group">
            <label for="email">email address</label>
            <input type="text" name="email" value="" class="form-control" autofocus tabindex="1" autocomplete="off" />
            <div class="error" data-for="email"></div>
          </div>
          <div class="form-group">
            <label for="password">password</label><span class="pull-right">Minimum 8 characters</span>
            <div style="position: relative">
              <input type="password" name="password" id="password" value="" class="form-control" tabindex="3" autocomplete="off" />
              <span class="input-group-addon showhide-addon" id="showhide-password"><span class="show-password-eye-icon"></span></span>
            </div>
            <div class="zxcvbn-group"></div>
            <div class="error" data-for="password"></div>
          </div>
          <div class="checkbox termsConditions">
            <input style="display:none;" name="terms_of_service" type="checkbox" class="list-item" value="agree" id="agree-and-acknowledge">
            <label for="agree-and-acknowledge" class="termsLinks">
              By checking this box, you agree to our <a href="">Terms of Service</a> and acknowledge and consent to our <a href="">Privacy Policy</a>.
            </label>
            <div class="error" data-for="terms_of_service"></div>
          </div>
          <div class="user-form-footer">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <button type="submit" class="btn btn-gold form-btn-gold" id="userSignUp" title="Register" tabindex="4">register</button>
            <div class="error" data-for="general_error" style="text-align: center"></div>
          </div>
          <div class="user-form-footer">
            <div class="create-account" tabindex="5">Have an Account Already?</div>
            <a href="/login" class="btn-common btn-grey form-btn-transparent" id="" title="login" tabindex="6">login</a>
          </div>
        </form>
      </div>

    </div>
  </div>
</div>
<%= render :partial => "/shared/web/common/footer" %>