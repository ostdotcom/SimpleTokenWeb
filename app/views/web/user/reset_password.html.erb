<% content_for :gradient_class, "bg-gradient poRel height100vh" %>
<div class="container sign-up-form">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <img src="https://d36lai1ppm9dxu.cloudfront.net/assets/logo/logo-with-tagline-mobile.png" width="211"/>
      </div>
      <div class="simple-token-form">
        <h1 class="text-center form-header">Reset Password</h1>
        <div class="form-sub-header">Enter your email address to receive the link to reset your password</div>

        <form class="user-form" method="POST" action="/api/user/send-reset-password-link" id="userPasswordResetForm">
          <div class="form-group">
            <label for="email">email address</label>
            <input type="text" name="email" id="email" value="" class="form-control" autofocus tabindex="1" />
            <div class="error" data-for="email"></div>
          </div>
          <div class="form-group user-form-footer">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <button id="recoverPassword" type="submit" class="btn btn-gold form-btn-gold" title="Recover" tabindex="2">Recover</button>
            <div class="error" data-for="general_error"></div>
          </div>
        </form>
        <div class="user-form-footer">
          <a href="/login" class="btn-common btn-grey form-btn-transparent" title="Return To Login" tabindex="3">return to login</a>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render :partial => "/shared/web/common/footer" %>