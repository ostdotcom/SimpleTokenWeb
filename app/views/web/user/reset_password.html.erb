<% content_for :gradient_class, "bg-gradient position-relative" %>
<div class="container sign-up-form py-5">
  <div class="row">
    <div class="col-12">
      <%= render :partial => "/shared/web/common/kycaas_logo_header" %>

        <div class="simple-token-form" id="resetPassword">
          <h4 class="text-center mt-4">Reset Password</h4>

          <h6 class=" text-center">Enter your email address to receive the link to reset your password</h6>

          <form class="user-form" method="POST" action="/api/user/send-reset-password-link" id="userPasswordResetForm">
            <div class="form-group">
              <label class="form-label" for="email">email address</label>
              <input type="text" name="email" id="email" required
                     value="" class="form-control" autofocus tabindex="1" autocomplete="off"/>

              <div class="invalid-feedback" data-forid="email"></div>
            </div>
            <div class="form-group user-form-footer">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
              <button id="recoverPassword" type="submit" class="btn btn-primary" data-submiting="Recovering..."
                      title="Recover" tabindex="2">Recover</button>
              <div class="invalid-feedback general_error" data-for="userPasswordResetForm"></div>
            </div>
          </form>

          <div class="user-form-footer text-center">
            <a href="/login" class="btn btn-secondary mx-auto mt-3" title="Return To Login" tabindex="3">return
              to login</a>
          </div>

        </div>

        <div id="resetPasswordSuccess" class="display-none">
          <%= render :partial => "/web/user/reset_password_success" %>
        </div>

    </div>
  </div>
</div>