<div style="position: absolute;width: 100%;z-index: 1">
  <%= render :partial => "/shared/web/common/loggedin_header", locals: {user: @user} %>
</div>
<%= "Invalid token url " if params["e_t"] == 1 %>
<div class="container sign-up-form py-5">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <a href="/" title="Simple Token">
          <img src="https://d36lai1ppm9dxu.cloudfront.net/assets/logo/simple-token-dashboard-logo-1x.png" width="202" alt="Simple Token Logo"/>
        </a>
      </div>
      <div class="simple-token-form">
        <h1 class="text-center form-header">Thank you for registering</h1>
        <div class="form-sub-header text-center" style="font-weight: 500;font-size: 18px;margin-top: 25px">Check your inbox to activate your account</div>
        <div class="form-sub-header text-center">We have sent an email to <%= @user["email"] %>. Please click on the "Activate Account"</br> button in the email to access your account.</div>
        <div class="user-form">
          <div class="user-form-footer">
            <div class="create-account">Didn't receive the email?</div>
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <a href="javascript:void(0)" id="resendLink" class="btn-common btn-grey form-btn-transparent resendLink" title="Re-send Activation Email" tabindex="1">Re-send Activation Email</a>
            <div class="success" id="successMessage"></div>
            <div class="error" data-for="general_error"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= render :partial => "/shared/web/modals/verification_link_modal" %>

<% content_for :end_js do %>
  <script type="text/javascript">
    $(document).ready(function () {
      simpletoken.verification.home.init({
        e_t: '<%=  params["e_t"] %>'
      });
    });
  </script>
<% end %>