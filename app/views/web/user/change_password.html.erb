<% content_for :gradient_class, "bg-gradient poRel height100vh" %>
<div class="container sign-up-form">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <img src="//d3attjoi5jlede.cloudfront.net/simpletoken/logo/logo-with-tagline-mobile.png" width="211"/>
      </div>
      <div class="simple-token-form">
        <h1 class="text-center form-header">Reset Your Password</h1>
        <form class="user-form" method="" action="" id="">
          <div class="form-group">
            <label for="password">password</label>
            <div class="input-group">
              <input type="password" name="password" id="password" value="" class="form-control" tabindex="1" />
              <span class="input-group-addon"><span class="show-password-eye-icon"></span></span>
            </div>
            <span id="err_email" class="error"></span>
          </div>
          <div class="form-group">
            <label for="confirm_password">confirm password</label>
            <input type="password" name="password" id="confirm_password" value="" class="form-control" tabindex="2" />
            <span id="err_password" class="error"></span>
          </div>
          <div class="user-form-footer">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <button type="submit" class="btn btn-gold form-btn-gold" id="" title="Reset Password" tabindex="3">reset password</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
<%= render :partial => "/shared/web/common/footer" %>