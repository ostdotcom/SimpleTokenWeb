<%
   qr_code_url = @resp_data['qr_code_url']

%>
<%= render :partial => "admin/shared/kyc_loggedin_header" %>
<div class="container sign-up-form py-5">
  <div class="row">
    <div class="col-12">
      <div class="text-center">
        <a href="/" title="OST KYC" class="border-none">
          <img src="https://d36lai1ppm9dxu.cloudfront.net/assets/image/ost-kyc/ost-kyc-jumbotron-logo.svg" width="211"/>
        </a>
      </div>
      <div class="simple-token-form">
        <h4 class="text-center form-header mt-5 mb-2">Multi Factor Authentication</h4>

        <div class="form-sub-header text-center">Please enter an MFA code to complete sign-in.</div>
        <form class="user-form col-12 col-md-6 col-lg-5 col-xl-4 mx-auto" style="text-align: center;" method="POST" action="/api/admin/mfa" id="adminAuthForm">

          <% if qr_code_url.present? %>
              <div class="">
                <div class="img-label">Scan the QR Code</div>
                <div class="img-container">
                  <div class="qr-image">
                    <a href="<%= qr_code_url %>" target="_blank"><img src="<%= qr_code_url %>" alt="QR CODE" width="180" ></a>
                  </div>
                </div>
              </div>
          <% end %>

          <div class="form-group">
            <label for="email">mfa code</label>
            <input type="text" name="otp" id="otp" value="" class="form-control" autofocus tabindex="1">

            <div class="error" data-for="otp"></div>
          </div>
          <div class="form-group user-form-footer">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <button type="submit" class="btn btn-primary" id="adminAuthentication" tabindex="2" title="Submit">Submit</button>
            <div class="error" data-for="general_error"></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>