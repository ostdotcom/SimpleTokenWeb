<%
   qr_code_url = @resp_data['qr_code_url']

%>
<div class="container sign-up-form">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <a href="/" title="Simple Token">
          <img src="https://d36lai1ppm9dxu.cloudfront.net/assets/logo/logo-with-tagline-mobile.png" width="211"/>
        </a>
      </div>
      <div class="simple-token-form">
        <h1 class="text-center form-header">Multi Factor Authentication</h1>

        <div class="form-sub-header">Please enter an MFA code to complete sign-in.</div>
        <form class="user-form" style="text-align: center;" method="POST" action="/api/admin/mfa" id="adminAuthForm">

          <% if qr_code_url.present? %>
              <div class="">
                <div class="img-label">Scan the QR Code</div>
                <div class="img-container">
                  <div class="qr-image">
                    <a href="<%= qr_code_url %>" target="_blank"><img src="<%= qr_code_url %>"></a>
                  </div>
                </div>
              </div>
          <% end %>

          <div class="form-group">
            <label for="email">mfa code</label>
            <input type="text" name="otp" id="otp" value="" class="form-control" autofocus tabindex="1">

            <div class="error" data-for="otp"></div>
          </div>
          <div class="form-group user-form-footer">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <button type="submit" class="btn btn-gold form-btn-gold" id="adminAuthentication" tabindex="2" title="Submit">Submit</button>
            <div class="error" data-for="general_error"></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>