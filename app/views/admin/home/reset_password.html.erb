<div class="cloud-bg">
  <%= render :partial => "admin/shared/kyc_loggedin_header" %>
  <div class="container sign-up-form py-5">
    <div class="row">
      <div class="col-12">
        <div class="simple-token-form" id="resetPassword">
          <h3 class="text-center my-4">Update Your Password</h3>
          <form class="user-form col-12 col-md-6 col-lg-5 col-xl-4 mx-auto" method="POST" action="/api/admin/reset-password" id="resetPasswordForm">
            <div class="form-group">
              <label class="form-label" for="password">password</label>

              <div class="position-relative" >
                <input type="password" name="password" id="password" value="" class="form-control"
                       tabindex="1" autocomplete="off" title="password" minlength="8" required/>
                <span class="input-group-addon showhide-addon" id="showhide-password"><span class="show-password-eye-icon"></span></span>
              </div>
              <div class="zxcvbn-group"></div>
              <div class="invalid-feedback" data-forname="password"></div>
            </div>
            <input hidden name="r_t" value="<%= params[:r_t] %>"/>

            <div class="form-group">
              <label class="form-label" for="confirm_password">confirm password</label>
              <input type="password" name="confirm_password" id="confirm_password" value="" class="form-control"
                     tabindex="2" autocomplete="off" title="password" minlength="8" required />
              <div class="invalid-feedback" data-forname="confirm_password"></div>
            </div>
            <div class="user-form-footer form-group text-center">
              <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
              <button type="submit" class="btn btn-primary" data-submiting="Resetting..." id="resetBtn" title="Reset Password" tabindex="3">Update password</button>
              <div class="invalid-feedback general_error" data-forid="resetPasswordForm"></div>
            </div>
          </form>
        </div>

        <div id="resetPasswordSuccess" class="display-none">
          <%= render :partial => "/admin/home/reset_password_success" %>
        </div>

      </div>
    </div>
  </div>
</div>