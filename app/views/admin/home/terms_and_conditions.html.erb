
<div class="container-fluid terms-conditions-container">
  <div class="container py-5">
    <div class="row">
      <div class="col-12 col-md-10 mx-auto align-self-center">
        <h5 class="text-center text-uppercase">Update in Terms and Conditions</h5>
        <form id="termsForm" class="custom-form col-12 mx-auto"
              data-redirect="/admin/dashboard" data-ost-formhelper
              method="POST" action="/api/admin/profile/update-terms-and-conditions" >
          <div class="info-text mt-5 mb-3">
            <%= raw @resp_data['text'] %>
          </div>
          <div class="form-group mt-2">
            <label for="terms_checkbox" class="label-cbx mb-0">
              <input class="form-check-input" id="terms_checkbox" required type="checkbox" name="terms_checkbox" value="1">
              <div class="checkbox">
                <svg width="18px" height="18px" viewBox="0 0 20 20">
                  <path d="M3,1 L17,1 L17,1 C18.1045695,1 19,1.8954305 19,3 L19,17 L19,17 C19,18.1045695 18.1045695,19 17,19 L3,19 L3,19 C1.8954305,19 1,18.1045695 1,17 L1,3 L1,3 C1,1.8954305 1.8954305,1 3,1 Z"></path>
                  <polyline points="4 11 8 15 16 6"></polyline>
                </svg>
              </div>
              <span class="font-weight-normal">I have read and agree to this update.</span>
            </label>
            <div class="invalid-feedback" data-forname="terms_checkbox"></div>
          </div>
          <button type="submit" data-submiting="Confirming..." title="CONFIRM" class="d-block mx-auto btn btn-primary mt-3">CONFIRM</button>
          <div class="general_error invalid-feedback text-center" data-forid="termsForm"></div>
        </form>
      </div>
    </div>
  </div>
</div>
