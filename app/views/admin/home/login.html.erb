<div class="container sign-up-form py-5">
  <div class="row">
    <div class="col-xs-12">
      <div class="text-center">
        <a href="/" title="Simple Token">
          <img src="https://d36lai1ppm9dxu.cloudfront.net/assets/image/ost-kyc/ost-kyc-jumbotron-logo.svg" width="211"/>
        </a>
      </div>
      <div class="simple-token-form">
        <h1 class="text-center form-header">Login to Admin</h1>
        <form class="user-form" method="POST" action="/api/admin/login" id="adminLoginForm">
          <div class="form-group">
            <label for="email">email address</label>
            <input type="text" name="email" id="email" value="" class="form-control" autofocus tabindex="1">
            <div class="error" data-for="email"></div>
          </div>
          <div class="form-group">
            <label for="password">password</label>
            <input type="password" class="form-control" name="password" id="password" tabindex="2" />
            <div class="error" data-for="password"></div>
          </div>
          <div class="form-group user-form-footer">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <div class="form-group form-recapcha">
              <div class="g-recaptcha form-recapcha-wrap" data-sitekey="<%= GlobalConstant::Base.recaptcha['site_key'] %>"></div>
              <div class="error" data-for="recaptcha" style="text-align: center"></div>
            </div>
            <button type="submit" class="btn btn-gold form-btn-gold" id="adminLogin" tabindex="3" title="LOGIN">login</button>
            <div class="error" data-for="general_error" style="text-align: center"></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>