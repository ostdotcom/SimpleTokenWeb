<div id="banner-content"></div>
<%= render :partial => "admin/shared/kyc_loggedin_header" %>
<div class="container sign-up-form py-5">
  <div class="row">
    <div class="col-12">
      <div class="simple-token-form">
        <h4 class="text-center form-header my-4">Change Your Password</h4>
        <form class="admin-form col-12 col-md-6 col-lg-5 col-xl-4 mx-auto" method="POST" action="/api/admin/profile/change-password" id="adminChangePasswordForm">
          <div class="form-group">
            <label class="form-label" for="current_password">current password</label>
            <input type="password" class="form-control" name="current_password" id="current_password" tabindex="1"/>

            <div class="error" data-for="current_password"></div>
          </div>

          <div class="form-group">
            <label class="form-label" for="new_password">new password</label>
            <input type="password" class="form-control" name="new_password" id="new_password" tabindex="2"/>

            <div class="error" data-for="new_password"></div>
          </div>

          <div class="form-group">
            <label class="form-label" for="confirm_password">confirm password</label>
            <input type="password" class="form-control" name="confirm_password" id="confirm_password" tabindex="3"/>

            <div class="error" data-for="confirm_password"></div>
          </div>

          <div class="form-group user-form-footer text-center">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
            <button type="submit" class="btn btn-primary mb-4" id="adminChangePassword" tabindex="4" title="CHANGE PASSWORD">change
              password
            </button>
            <a href="/admin/dashboard" class="btn btn-secondary">cancel</a>
            <div class="error" data-for="general_error"></div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>