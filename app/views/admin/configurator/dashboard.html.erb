<form id="configurator-form" method="POST" action="" data-ost-formhelper >

  <div class="accordion shown" role="tablist">
    <div class="accordion-header">
      <span class="circle mr-1">1</span>
      <span>SALE LIVE USER DASHBOARD</span>
    </div>
    <div class="accordion-content-wrapper mb-4" role="tablist" data-accordion-content="sale_live_dashboard_configuration"></div>
  </div>

  <div class="accordion" role="tablist">
    <div class="accordion-header">
      <span class="circle mr-1">2</span>
      <span>DEPOSIT ADDRESS POP-UP</span>
    </div>
    <div class="accordion-content-wrapper mb-4" role="tablist" data-accordion-content="deposit_address_popup"></div>
  </div>

  <div class="accordion" role="tablist">
    <div class="accordion-header">
      <span class="circle mr-1">3</span>
      <span>DEPOSIT ADDRESS USER DASHBOARD</span>
    </div>
    <div class="accordion-content-wrapper mb-4" role="tablist" data-accordion-content="deposit_address_user_dashboard"></div>
  </div>

</form>


<% content_for :javascript do %>
  <script type="text/javascript">
    <% entity_type = GlobalConstant::TemplateType.dashboard_template_type %>
    $(function () {
      ost.dashboardConfigurator.init({
        'configuratorGetApi' : "<%= api_get_url(entity_type) %>",
        'publishApi': "<%= api_publish_url(entity_type) %>",
        'resetApi': "<%= api_reset_url(entity_type) %>",
        'iframeUrl': "<%= iframe_url(entity_type) %>"
      });
    });
  </script>
<%end%>