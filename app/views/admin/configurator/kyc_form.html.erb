<form id="configurator-form" method="POST" action="" data-ost-formhelper>
  <div class="accordion shown" role="tablist">
    <div class="accordion-header">
      <span class="circle mr-1">1</span>
      <span>KYC FORM</span>
    </div>
    <div class="accordion-content-wrapper" data-accordion-content="kyc_configuration"></div>
  </div>

  <div class="accordion" role="tablist">
    <div class="accordion-header">
      <span class="circle mr-1">2</span>
      <span>KYC FORM POP-UP</span>
    </div>
    <div class="accordion-content-wrapper" data-accordion-content="popup_kyc_configuration"></div>
  </div>
</form>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function () {
      ost.kycConfigurator.init({
        'configuratorGetApi' : "<%= api_get_url('kyc-form') %>",
        'publishApi': "<%= api_publish_url('kyc-form') %>",
        'resetApi': "<%= api_reset_url('kyc-form') %>",
        'iframeUrl': "<%= iframe_url('kyc-form') %>"
      });
    });
  </script>
<%end%>