  <% if (params[:controller] == "web/kyc")  && ['index'].include?(params[:action]) %>
    <script src="https://www.google.com/recaptcha/api.js"></script>
  <% end %>
</head>

<body contenteditable="false">

<main id="site-content" class="<%= yield (:gradient_class) %>">
  <%= yield %>
</main>

