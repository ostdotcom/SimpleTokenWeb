<%
   progressbar_milestones = [20.83, 38, 50, 75, 100]
%>

<div class="timeline-title" <%= @presenter_obj.target_milestone_achieved? || !@presenter_obj.soft_cap_milestone_achieved? ? 'hidden' : '' %> >
    <%= @presenter_obj.target_percent_achieved %>% of Target Achieved
</div>

<div class="container-timeline horizontal">
  <div class="progress">
    <div class="progress-bar pb-1" role="progressbar" style="width: <%=progressbar_milestones[0]%>%">
      <div class="pb-inner" data-pc="<%= @presenter_obj.width_of_progress_bar('soft_cap') %>" data-class="<%= @presenter_obj.class_of_progress_bar('soft_cap') %>"></div>
    </div>
    <div class="progress-bar pb-2" role="progressbar" style="width: <%=progressbar_milestones[1]-progressbar_milestones[0]%>%">
      <div class="pb-inner" data-pc="<%= @presenter_obj.width_of_progress_bar('target') %>" data-class="<%= @presenter_obj.class_of_progress_bar('target') %>"></div>
    </div>
    <div class="progress-bar pb-3" role="progressbar" style="width: <%=progressbar_milestones[2]-progressbar_milestones[1]%>%">
      <div class="pb-inner" data-pc="<%= @presenter_obj.width_of_progress_bar('kicker') %>" data-class="<%= @presenter_obj.class_of_progress_bar('kicker') %>"></div>
    </div>
    <div class="progress-bar pb-4" role="progressbar" style="width: <%=progressbar_milestones[3]-progressbar_milestones[2]%>%">
      <div class="pb-inner" data-pc="<%= @presenter_obj.width_of_progress_bar('power') %>" data-class="<%= @presenter_obj.class_of_progress_bar('power') %>"></div>
    </div>
    <div class="progress-bar pb-5" role="progressbar" style="width: <%=progressbar_milestones[4]-progressbar_milestones[3]%>%">
      <div class="pb-inner" data-pc="<%= @presenter_obj.width_of_progress_bar('hard_cap') %>" data-class="<%= @presenter_obj.class_of_progress_bar('hard_cap') %>"></div>
    </div>
  </div>
  <div class="milestones">
    <div class="milestone ms-1" data-class="<%= @presenter_obj.class_of_milestone('soft_cap') %>" style="left:calc(<%=progressbar_milestones[0]%>% - 50px)">
      <div class="st"><strong>50M</strong> ST</div>
      <div class="line"></div>
      <div class="point">
        <div class="point-inner"></div>
      </div>
      <div class="check">&#10004;</div>
      <div class="desc">
        <div class="title">Soft Cap</div>
        <div class="sub">Sale Activated</div>
      </div>
    </div>
    <div class="milestone ms-2" data-class="<%= @presenter_obj.class_of_milestone('target') %>" style="left:calc(<%=progressbar_milestones[1]%>% - 50px)">
      <div class="o-circle">
        <div class="circle-inner">ST Target Achieved</div>
      </div>
      <div class="st"><strong>100M</strong> ST</div>
      <div class="line"></div>
      <div class="point">
        <div class="point-inner"></div>
      </div>
      <div class="check">&#10004;</div>
      <div class="desc">
        <div class="title">Target</div>
        <div class="sub">Everyone gets</div>
        <div class="bonus">20% bonus</div>
      </div>
    </div>
    <div class="milestone ms-3" data-class="<%= @presenter_obj.class_of_milestone('kicker') %>" style="left:calc(<%=progressbar_milestones[2]%>% - 50px)">
      <div class="o-circle">
        <div class="circle-inner">ST Kicker Achieved</div>
      </div>
      <div class="st"><strong>120M</strong> ST</div>
      <div class="line"></div>
      <div class="point">
        <div class="point-inner"></div>
      </div>
      <div class="check">&#10004;</div>
      <div class="desc">
        <div class="title">Kicker</div>
        <div class="sub">Everyone gets</div>
        <div class="bonus">25% bonus</div>
      </div>
    </div>
    <div class="milestone ms-4" data-class="<%= @presenter_obj.class_of_milestone('power') %>" style="left:calc(<%=progressbar_milestones[3]%>% - 50px)">
      <div class="o-circle">
        <div class="circle-inner">ST Power Achieved</div>
      </div>
      <div class="st"><strong>180M</strong> ST</div>
      <div class="line"></div>
      <div class="point">
        <div class="point-inner"></div>
      </div>
      <div class="check">&#10004;</div>
      <div class="desc">
        <div class="title">Power</div>
        <div class="sub">Everyone gets</div>
        <div class="bonus">30% bonus</div>
      </div>
    </div>
    <div class="milestone ms-5" data-class="<%= @presenter_obj.class_of_milestone('hard_cap') %>" style="left:calc(<%=progressbar_milestones[4]%>% - 50px)">
      <div class="o-circle">
        <div class="circle-inner">Token Sale Ends</div>
      </div>
      <div class="st"><strong>240M</strong> ST</div>
      <div class="line"></div>
      <div class="point">
        <div class="point-inner"></div>
      </div>
      <div class="check">&#10004;</div>
    </div>
  </div>
</div>

