<div id="verifyModal" class="modal fade" role="dialog" tabindex="-1">
  <button type="button" class="close" data-dismiss="modal">
    <span aria-hidden="true" class="modal-cross-icon" title="close"></span>
  </button>
  <!--<div class="vertical-alignment-helper">-->
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body">
          <div class="heading text-center">Verify Information</div>
          <form class="simpletoken-form">
            <div class="form-group">
              <div class="checkbox">
                <input type="checkbox" value="" id="is_correct_information" name="is_correct_information" >
                <label for="is_correct_information">
                  All the personal information I have entered is correct.
                </label>
              </div>
              <div class="checkbox">
                <input type="checkbox" value="" id="is_participating_token_distribution" name="is_participating_token_distribution" >
                <label for="is_participating_token_distribution">
                  I certify that Iâ€™m  participating in the token distribution even in the capacity of an individual (and benificial owner) and not as a representative (or agent) of a third party corporate entity (non natural Person)
                </label>
              </div>
              <div class="checkbox">
                <input type="checkbox" value="" id="cannot_participate" name="cannot_participate" >
                <label for="cannot_participate">
                  I understand that I cannot participate in the token distribution even with a different Ethereum wallet that was entered in this form.
                </label>
              </div>
              <div class="checkbox">
                <input type="checkbox" value="" id="i_agree_terms_conditions" name="i_agree_terms_conditions" >
                <label for="i_agree_terms_conditions">
                  I agree to Terms and Condition.
                </label>
              </div>
              <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
              <button class="btn-common btn-gold verify-btn" title="VERIFY">VERIFY</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  <!--</div>-->
</div>