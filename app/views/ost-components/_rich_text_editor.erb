<script type="text/x-handlebars-template" id="ost-rich-text-editor">
  <div class="row form-group tinymce-wrap">
    <div class="col-12">
      <div class="row">
        <div class="col-9">
          <div class="form-label align-items-center">
            {{#count}}
            <svg class="config-info-icon align-middle">
              <switch>
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#rearrange-icon"></use>
              </switch>
            </svg>
            {{/count}}
            <label class="align-middle mb-0">
              {{label}} {{#count}}#{{count}}{{/count}}
            </label>
            {{#ifTooltip tooltip}}
            <span data-toggle="tooltip" data-placement="right" title="{{tooltip}}" class='config-info-icon align-middle'>
                <svg class="config-info-icon">
                  <switch>
                    <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#info-icon"></use>
                  </switch>
                </svg>
            </span>
            {{/ifTooltip}}
          </div>
        </div>
        <div class="col-3 text-right pl-0">
          <span style="font-size: 13px">
            <span class="length-mocker">{{value.length}}</span>
            <span>/{{validation.max_length}}</span>
          </span>
          {{#isComponentDelete isDeleteEnabled}}
            <span class="delete-component" title="Delete">
              <svg class="config-info-icon">
                <switch>
                  <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#delete-icon"></use>
                </switch>
              </svg>
            </span>
          {{/isComponentDelete}}
        </div>
      </div>
    </div>
    <div class="col-12 text-right" >
      <textarea class="tinymce-editor mock-length form-control" name="{{data_key_name}}"
                {{is_required validation.required}}
                minlength="validation.min_length"
                maxlength="validation.max_length">{{value}}</textarea>
    </div>
    <div class="invalid-feedback col-12" data-forname="{{data_key_name}}"></div>
  </div>
</script>

<% content_for :ost_components do %>
  <script type="text/javascript" >
    $(function(){

      Handlebars.registerHelper('isComponentDelete', function( isDeleteEnabled, options ) {
        if( isDeleteEnabled ){
          return options.fn(this);
        }
        return options.inverse(this);
      });

    });
  </script>
<%end%>