<script type="text/x-handlebars-template" id="ost-collapse">
  <div class="card mb-4">
    <div class="card-header">
      <a class="card-link" data-toggle="collapse" data-target="#{{configurator_component_id 'collapse' }}" data-parent="#accordion">
        <span>{{header}}</span>
        {{#ifTooltip tooltip}}
        <span data-toggle="tooltip" data-placement="right" title="{{tooltip}}" class='config-info-icon align-middle'>
            <svg class="config-info-icon">
              <switch>
                <use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="#info-icon"></use>
              </switch>
            </svg>
          </span>
        {{/ifTooltip}}
      </a>
    </div>
    <div class="collapse show" id="{{configurator_component_id 'collapse' true}}">
      <div class="card-body section-content-wrap pb-0">
      </div>
      {{#ifCollapseFooter footer}}
        <div class="card-footer">
         {{{ getCollapseFooter footer }}}
        </div>
      {{/ifCollapseFooter}}
    </div>
  </div>
</script>

<% content_for :ost_components do %>
  <script type="text/javascript">
    $(function () {

      Handlebars.registerHelper('ifCollapseFooter', function( data, options ) {
        if( data ){
          return options.fn(this);
        }
        return options.inverse(this);
      });

      Handlebars.registerHelper('getCollapseFooter', function( data , options ) {
        var selector  = data.template ,
            jMarkup   = ost.handlebarHelper.getMarkup( selector , data ) ;
        return jMarkup ;
      });

    });
  </script>
<%end%>

<script type="text/x-handlebars-template" id="ost-add-terms_condition">
